<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
	<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
	<style type="text/css">
		body{
			margin:0;
			padding: 0;
		}
		#customers  
		  {  
		  font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;  
		  width:100%;  
		  border-collapse:collapse;  
		  }  
		  
		#customers td #customers th   
		  {  
		  font-size:1em;  
		  border:1px solid #98bf21;  
		  padding:3px 7px 2px 7px;  
		  }  
		  
		#customers th   
		  {  
		  font-size:1.1em;  
		  text-align:left;  
		  padding-top:5px;  
		  padding-bottom:4px;  
		  background-color:#A7C942;  
		  color:#ffffff;  
		  }  
		  
		#customers tr .alt td   
		  {  
		  color:#000000;  
		  background-color:#EAF2D3;  
		  }  
	</style>
</head>
<body>
		<% include header.ejs %>


 <!-- content start -->
  <div class="admin-content">
    <div class="admin-content-body">
      <div class="am-cf am-padding am-padding-bottom-0">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">活动管理</strong> / <small>活动审查</small></div>
      </div>

      <hr>

      <div class="am-g">
        <div class="am-u-sm-12 am-u-md-9">
          <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-xs">
            </div>
          </div>
        </div>
        
        <div class="am-u-sm-12 am-u-md-3">
          <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
          <span class="am-input-group-btn">
            <button class="am-btn am-btn-default" type="button">搜索</button>
          </span>
          </div>
        </div>
      </div>

      <div class="am-g">
        <div class="am-u-sm-12">
          <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
              <thead>
              <tr>
              	<th class="table-title">标题</th><th class="table-type">地点</th><th class="table-author am-hide-sm-only">发布者</th><th class="table-date am-hide-sm-only">日期</th><th class="table-set">操作</th>
              </tr>
              </thead>
              <tbody>
              	<% for(var i=0;i<data.length;i++){ %>
				<tr>
					<td><%= data[i].name %></td>
					<td><%= data[i].address %></td>
					<td><%= data[i].publisher %></td>
					<td><%= data[i].date %></td>
					<td>
	                  <div class="am-btn-toolbar">
	                    <div class="am-btn-group am-btn-group-xs">
	                      <a href="?act=display&id=<%= data[i]._id %>"><button class="display am-btn am-btn-default am-btn-xs am-text-secondary" type="button"><span class="am-icon-pencil-square-o"></span> 查看</button></a>
	                      <a href="?act=del&id=<%= data[i]._id %>"><button class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only" type="button">
	                      <span class="am-icon-trash-o"></span> 删除</button></a>
	                    </div>
	                  </div>
               		</td>
				</tr>
				<% } %>
              </tbody>
            </table>
          </form>
        </div>

      </div>
    </div>

  </div>
  <!-- content end -->
	<% include footer.ejs %>
</body>

</html>