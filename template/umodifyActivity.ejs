
		<% include uheader.ejs %>

 <!-- content start -->
    <div class="admin-content">
        <div class="admin-content-body">
            <div class="am-cf am-padding am-padding-bottom-0">
                <div class="am-fl am-cf">
                    <strong class="am-text-primary am-text-lg">修改活动</strong>
                </div>
            </div>

            <hr>


            <form class="am-form" method="post" enctype="multipart/form-data">
                <fieldset>
                    <div class="am-form-group" style="display:none">
                        <label for="doc-ipt-id-1 ">活动名</label>
                        <input value="<%= data._id %>" name="_id" type="text" class="" id="doc-ipt-id-1" placeholder="Enter Activity Name">
                    </div>
                    <div class="am-form-group">
                        <label for="doc-ipt-name-1">活动名</label>
                        <input value="<%= data.name %>" name="name" type="text" class="" id="doc-ipt-name-1" placeholder="Enter Activity Name" required>
                    </div>

                    <div class="am-form-group am-form-icon">
                        <label for="doc-ipt-file-1">日期</label>
                        <i class="am-icon-calendar"></i>
                        <input value="<%= data.date %>" name="date" type="text" class="am-form-field" placeholder="Enter Date" required>
                    </div>
                    <div class="am-form-group">
                        <label for="doc-ipt-address-1">地址</label>
                        <input value="<%= data.address %>" name="address" type="text" class="" id="doc-ipt-address-1" placeholder="Enter Address" required>
                    </div>
                    <div class="am-form-group">
                        <label for="doc-ipt-time-1">时长</label>
                        <input value="<%= data.time %>" name="time" type="text" class="" id="doc-ipt-time-1" placeholder="Enter Time" required>
                    </div>

                    <div class="am-form-group">
                        <label for="doc-ipt-file-1">活动图片</label>
                        <img src="<%= data.image %>" class="am-img-responsive" alt=""/>
                        <input value="<%= data.image %>" name="image" type="file" id="doc-ipt-file-1">
                        <p class="am-form-help">请选择要上传的图片...</p>
                    </div>

                    <div class="am-form-group">
                        <label for="doc-ta-1">简介</label>
                        <textarea name="intro" class="" rows="5" id="doc-ta-1" required><%= data.intro %></textarea>
                    </div>

                    <div class="am-form-group">
                        <label for="doc-ta-2">要求</label>
                        <textarea name="requirement" class="" rows="5" id="doc-ta-2" required><%= data.requirement %></textarea>
                    </div>


                    <div class="am-form-group">
                        <label for="doc-ta-3">福利</label>
                        <textarea name="welfare" class="" rows="5" id="doc-ta-3" required><%= data.welfare %></textarea>
                    </div>

                    <p>
                        <button type="submit" class="am-btn am-btn-primary">提交</button>
                    </p>
                </fieldset>
            </form>
        </div>
    </div>

    <footer class="admin-content-footer">
        <hr>
        <p class="am-padding-left">© 2014 AllMobilize, Inc. Licensed under MIT license.</p>
    </footer>

</div>
<!-- content end -->
	<% include footer.ejs %>
